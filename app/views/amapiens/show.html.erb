<h1 class="title-amapiens">Les paniers mis à votre disposition par les autres amapiens :</h1>
<div class="right-col-cat">
  <% @gifts.each do |gift| %>
    <div class="amapiens-category-list">
        <div class="amapiens-category-icone">
            <%= image_tag gift.option.category.photo, width: '80px', height: '80px' %>
        </div>
        <div class="amapiens-gift-content">
            <p>Contenu du panier: <%= gift.option.content  %></p>
            <% if gift.giver.first_name.nil? %>
                <p>Vous venez de mettre à disposition ces produits</p>
            <% else %>
                <p>De la part de : <%= gift.giver.first_name %></p>
            <% end %>
        </div>
        <% if gift.giver != current_user %>
            <button class="amapiens-button"><%= link_to 'Echanger avec celui-ci', amapiens_path(gift: gift.id), method: :patch %></button>
        <% end %>
    </div>
  <% end %>

</div>
  <p class="back"><%= link_to "Retour à l'Accueil", dashboard_path %></p>
